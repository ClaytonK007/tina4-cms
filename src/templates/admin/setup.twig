{% extends "@tina4cms/admin/dashboard.twig" %}

{% block content %}


            <div class="col-md-4 offset-md-4">
                <div class="card mt-4">
                    <div class="card-header">
                        <h4>Setup CMS <img width="128px"class="float-right" src="/src/assets/images/tina4.png"></h4>
                    </div>
                    <div class="card-body">
                        <form id="setupForm" method="post">
                            <div class="form-group">
                                <label for="firstName"><b>First Name</b></label>
                                <input class="form-control" type="text" id="firstName" name="firstName" placeholder="First Name" value="" autocomplete="on" />
                            </div>
                            <div class="form-group">
                                <label for="lastName"><b>Last Name</b></label>
                                <input class="form-control" type="text" id="lastName" name="lastName" placeholder="Last Name" value="" autocomplete="on" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" type="text" name="email" placeholder="Email Address"
                                       autocomplete="on"/>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input class="form-control" id="password" type="password" name="password" placeholder="Password"
                                       autocomplete="on"/>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input class="form-control" type="password" name="confirmPassword" placeholder="Confirm Password"
                                       autocomplete="on"/>
                            </div>
                            <button class="btn btn-block btn-primary">Setup</button>
                            {{ "setup" | formToken | raw }}
                        </form>
                        <script>
                            $("#setupForm").validate({
                                rules: {
                                    email: "required",
                                    password: "required",
                                    confirmPassword: { required: true,  equalTo: "#password" }
                                },
                                messages: {
                                    email: "Email address required",
                                    password: "Password required",
                                    confirmPassword: "Make sure you type the same value in again"
                                }
                            });
                        </script>

                    </div>
                </div>
            </div>


{% endblock %}